@{
    ViewData["Title"] = "Perfil";
    Layout = "~/Views/Shared/_Layout_SocialApp.cshtml";
}

<div class="flex-row-responsive user-profile-container">
    <div class="flex-20 user-profile-card height-fit-content">
        <div class="user-profile-card-picture">
            <img src="/images/foto-paty.jpg" />
        </div>
        <div class="user-profile-card-name">
            <h5>Sara Patricia Jaimes Santos</h5>
        </div>
        <span class="span"></span>
        <div class="user-profile-card-info-section">
            <label><i class="bi bi-chat-right-heart"></i>Sobre mi</label>
            <p>Me gustan mucho los pandas y mi novio</p>
        </div>
        <div class="user-profile-card-info-section">
            <label><i class="bi bi-balloon-heart"></i>Cumpleaños</label>
            <p>22 de Julio</p>
        </div>
        <div class="user-profile-card-info-section">
            <label><i class="bi bi-geo-fill"></i>Lugar de origen</label>
            <p>Ciudad Madero, Tamps. Mexico</p>
        </div>
        <div class="user-profile-card-info-section">
            <label><i class="bi bi-calendar3"></i>Membro desde</label>
            <p>26 de Mayo 2021 (1 año)</p>
        </div>
        <div class="user-profile-card-info-section">
            <label><i class="bi bi-command"></i>Rol</label>
            <p>Voluntario</p>
        </div>
        <span class="span"></span>
        <a class="button-2 margin-top-8" href=@Url.Action("EditProfile", "User")>Editar informacion</a>
    </div>

    <div class="flex-60 flex-col margin-l-16-small-hide margin-top-16-small">
        <div class="padding-16 bg-white">
            <form class="flex-col">
                <div class="flex-row">
                    <div class="mobile-hidden">
                        <img class="profile-pic-1" src="/images/foto-paty.jpg" />
                    </div>
                    <div class="flex-col flex-100">
                        <textarea class="form-control" placeholder="Escribe tus pensamientos aqui" rows="3"></textarea>
                        <div class="flex-row margin-top-16 justify-space-between">
                            <div class="post-options">
                                <button class="button-2" type="button"><i class="bi bi-images cl-green"></i>
                                    Multimedia</button>
                            </div>

                            <div class="post-submit">
                                <button class="button-2 bg-darkblue cl-white" type="button"><i
                                        class="bi bi-send-fill"></i> Publicar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <span class="span-2-top padding-top-8">
            <h4 class="text-left">Publicaciones anteriores</h4>
        </span>

        <div class="post">
                <div class="head">
                    <div>
                        <img class="profile-pic-1" src="/images/foto-paty.jpg">
                    </div>
                    <div class="post-info">
                        <label class="author">Sara Patricia Jaimes Santos</label>
                        <label class="dateTime">Publicado el Miercoloes 18 de Mayo, 07:30 PM</label>
                    </div>
                </div>

                <div class="body">
                    <div class="description">
                        <p>Hola a todos los miembros de esta comunidad, esto es solo un post de prueba</p>
                    </div>
                </div>

                <div class="counters">
                    <label>158 Me gusta</label> <label>|</label>
                    <label>10 Veces compartido</label> <label>|</label>
                    <label>25 Comentarios</label>
                </div>

                <div class="row-actions">
                    <div class="post-action margin-r-16">
                        <button class="button mobile-hidden" type="button"><i class="bi bi-hand-thumbs-up-fill"></i>Me gusta</button>
                        <button class="button md-hidden" type="button"><i class="bi bi-hand-thumbs-up-fill"></i></button>
                    </div>
                    @* <div class="post-action">
                        <button class="btn" type="button"><i class="bi bi-share-fill"></i>Compartir</button>
                        </div> *@
                    <div class="post-action">
                        <button class="button mobile-hidden" type="button"><i class="bi bi-chat-right-dots-fill"></i>Comentar</button>
                        <button class="button md-hidden" type="button"><i class="bi bi-chat-right-dots-fill"></i></button>
                    </div>
                </div>
            </div>

        <div class="post">
                <div class="head">
                    <div>
                        <img class="profile-pic-1" src="/images/foto-paty.jpg">
                    </div>
                    <div class="post-info">
                        <label class="author">Sara Patricia Jaimes Santos</label>
                        <label class="dateTime">Publicado el Miercoloes 18 de Mayo, 07:30 PM</label>
                    </div>
                </div>

                <div class="body">
                    <div class="description">
                        <p>Hola a todos los miembros de esta comunidad, esto es solo un post de prueba</p>
                    </div>
                    <div class="media">
                        <img src="/images/5a20121a4.png" alt="Demo image">
                    </div>
                </div>

                <div class="counters">
                    <label>158 Me gusta</label> <label>|</label>
                    <label>10 Veces compartido</label> <label>|</label>
                    <label>25 Comentarios</label>
                </div>

                <div class="row-actions">
                    <div class="post-action margin-r-16">
                        <button class="button mobile-hidden" type="button"><i class="bi bi-hand-thumbs-up-fill"></i>Me gusta</button>
                        <button class="button md-hidden" type="button"><i class="bi bi-hand-thumbs-up-fill"></i></button>
                    </div>
                    @* <div class="post-action">
                        <button class="btn" type="button"><i class="bi bi-share-fill"></i>Compartir</button>
                        </div> *@
                    <div class="post-action">
                        <button class="button mobile-hidden" type="button"><i class="bi bi-chat-right-dots-fill"></i>Comentar</button>
                        <button class="button md-hidden" type="button"><i class="bi bi-chat-right-dots-fill"></i></button>
                    </div>
                </div>
            </div>

    </div>

    <span class="flex-20">uwu</span>
</div>